@model TblLogoff
@{
    ViewData["Title"] = "Member SignUp";
    Layout = "~/Views/Shared/_Layout-SuperAdmin.cshtml";
}
@section Scripts{
    <script src="~/js/auto-logoff-master.js"></script>
    <script src="~/js/custom-validation.js"></script>
}
@section CustomCSS{
    <style>
        .text-right .cus-pro-type .fa-plus {
            font-size: 14px !important;
        }

        a.btn.cus-pro-type {
            padding: 10px;
            background: #ff9900;
            font-weight: bold;
        }

        .cus-edit-icon {
            padding: 5px 8px;
            background: #ff9a27;
            border-radius: 5px;
        }

        .loginError {
            color: red;
            font-size: 13px;
        }

        .modl-btn.save {
            border: none;
            background: #ff9a27;
            padding: 8px 20px;
            border-radius: 5px;
        }
    </style>
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Auto LogOff Time</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-2">
                            <a href="/GlobalMaster/Dashboard">Admin</a>
                        </li>
                        <li class="breadcrumb-item active">Admin Reports</li>
                        <li class="breadcrumb-item active">LogOff</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- search cards  -->
        <!-- #END# search cards  -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">

                    <div class="header">
                        <form id="NotificationForm" action="">
                            <div class="col-md-12">
                                <div class="col-md-6">
                                    <span id="message" class="loginError"></span>
                                    <input type="hidden" id="hdnId" name="hdnId" value="0" />
                                    <input type="text" class="form-control number-only" maxlength="2" placeholder=" Enter Log Off  time in minute" required="" id="inpLogOff" name="LogOff">
                                    <span class="loginError"></span>
                                </div>
                                <div class="col-md-6 text-left">
                                    <button id="next-btn" class="newProbtn modl-btn save" onclick="return SaveLogOff()">Save</button>
                                </div>
                            </div>
                            
                           
                        </form>
                    </div>

                
                </div>
            </div>
        </div>
    </div>
</section>