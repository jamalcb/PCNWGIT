@{
    ViewData["Title"] = "Holiday Setting";
    Layout = "~/Views/Shared/_Layout-SuperAdmin.cshtml";
}
@section Scripts{
    <script src="~/js/holiday-settings.js"></script>
}
@section jQueryUICss{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https:/resources/demos/style.css">
}
@section CustomCSS{
    <style>
        .text-right .cus-pro-type .fa-plus {
            font-size: 14px !important;
        }

        a.btn.cus-pro-type {
            padding: 10px;
            background: #ff9900;
            font-weight: bold;
        }

        .cus-edit-icon {
            padding: 5px 8px;
            background: #ff9a27;
            border-radius: 5px;
        }

        .loginError {
            color: red;
            font-size: 13px;
        }

        .modl-btn.save {
            border: none;
            background: #ff9a27;
            padding: 8px 20px;
            border-radius: 5px;
        }
    </style>
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Holiday Setting</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-2">
                            <a href="/GlobalMaster/Dashboard">Admin</a>
                        </li>
                        <li class="breadcrumb-item active">Other</li>
                        <li class="breadcrumb-item active">HolidaySetting</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">

                    <div class="header">
                        <form id="NotificationForm" action="">
                            <div class="col-md-12 row align-items-center">
                                <div class="col-md-3">
                                    <span id="message" class="loginError"></span>
                                    <input type="hidden" id="DiholidayId" name="DiholidayId" value="0" />
                                    <input type="text" class="form-control" placeholder="Holiday Name" id="Holiday" name="Holiday">
                                    <span class="loginError"></span>
                                </div>
                                <div class="col-md-3">

                                    <input class="form-control form-control-solid datepicker" type="text" id="HolidayDt" name="HolidayDt" placeholder="Choose Holiday date..">
                                    <span class="loginError"></span>
                                </div>
                                <div class="col-md-1 ">
                                    <input type="button" id="next-btn" class="newProbtn modl-btn save" onclick="return SaveHolidaySetting()" value="Save">
                                    <input type="button" id="update" class="newProbtn modl-btn save m-0" onclick="return SaveHolidaySetting()" value="Update">
                                </div>
                                <div class="col-md-1 px-5">
                                    <input type="button" id="BtnReset" class="newProbtn modl-btn save" onclick="return Reset()" value="Reset">
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="body">
                        <div class="table-responsive cus-">
                            <table id="" class="table-bordered display table table-hover table-checkable order-column m-t-20 width-per-100 pTables">
                                <thead>
                                    <tr>
                                        <th class="text-left">Holiday</th>
                                        <th class="text-left">Holiday Date</th>
                                        <th class="w-10">Action</th>
                                    </tr>
                                </thead>
                                <tbody id="tblHolidaySetting" class="active-table-body">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>