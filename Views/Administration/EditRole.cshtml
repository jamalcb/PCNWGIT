@model EditRoleViewModel;
@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/Layout-Admin-Master.cshtml";
}
@{
    var UniqueId = ViewBag.Id;
}



<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Edit Role</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-2">
                            <a href="#" onClick="return false;">Admin</a>
                        </li>
                        <li class="breadcrumb-item active">Edit Role</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- search cards  -->
        <!-- #END# search cards  -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">

                    <div class="header">
                        <form method="post" asp-action="EditRole" asp-controller="administration">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Id" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="Id" disabled class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input type="text" asp-for="RoleName" class="form-control" />
                                    <span asp-validation-for="RoleName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mt-2">
                                <button type="submit" class="btn btn-primary">Update Role</button>
                                <a asp-action="RoleList" asp-controller="administration" class="btn btn-danger">Cancel</a>
                            </div>
                        </form>
                    </div>

                    <div class="body">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-header">
                                    Users in this role
                                </div>
                                <div class="card-body">
                                    @if (Model.Users.Any())
                                    {
                                        @foreach (var user in Model.Users)
                                        {
                                            <h5 class="card-text">
                                                @user
                                            </h5>
                                        }
                                    }
                                    else
                                    {
                                        <h5 class="card-text">
                                            None at the moment
                                        </h5>
                                    }
                                </div>
                                <div class="card-footer">
                                    <a class="btn btn-primary"
                                       asp-controller="administration" asp-action="EditUsersInRole" asp-route-roleId="@UniqueId" style="width:auto;">
                                        Add or Remove User
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>