@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "Edit User in Role";
    Layout = "~/Views/Shared/Layout-Admin-Master.cshtml";
}
@{
    var userId = ViewBag.userId;
}


<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Edit Role</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-2">
                            <a href="#" onClick="return false;">Admin</a>
                        </li>
                        <li class="breadcrumb-item active">Edit Role</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- search cards  -->
        <!-- #END# search cards  -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">

                    <div class="header">
                        <form method="post" action="ManageUserRoles">
                            <div class="card">
                                <div class="card-header">
                                    <h2>Manage User Roles</h2>
                                </div>
                                <div class="card-body">
                                    <input type="hidden" asp-for="@userId" />
                                    @*@foreach (var user in Model)*@
                                    @for (var i = 0; i < Model.Count; i++)
                                    {
                                        <div class="form-check m-1" name="model">
                                            <input type="hidden" asp-for="@Model[i].UserId" />
                                            <input type="hidden" asp-for="@Model[i].RoleName" />
                                            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                                <input asp-for="@Model[i].IsSelected" class="form-check-input" type="checkbox" />@Model[i].RoleName
                                                <span class="form-check-sign">
                                                    <span class="check"></span>
                                                </span>
                                            </label>
                                        </div>
                                    }
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                                <div class="card-footer">
                                    <input type="submit" value="Update" class="btn btn-primary" style="width:auto;" />
                                    <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary" style="width:auto;">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>