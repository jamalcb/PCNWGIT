@model CreateRoleViewModel;
@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/Layout-Admin-Master.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Create Role</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-2">
                            <a href="/Administration/UtilityDashboard">Admininstrator</a>
                        </li>
                        <li class="breadcrumb-item active">Utilities</li>
                        <li class="breadcrumb-item active">Create Role</li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- search cards  -->
        <!-- #END# search cards  -->
        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">

                    <div class="header">
                        <form method="post" action="CreateRole">
                            <div asp-validation-summary="All" class="text-danger user-list"></div>
                            <div class="form-group formCls ">
                                <label asp-for="RoleName"></label>
                                <input type="text" asp-for="RoleName" class="form-control" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                            <div class="mt-2">
                                <button type="submit" class="btn btn-primary create-role-btn">Create Role</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
