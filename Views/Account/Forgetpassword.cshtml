<body class="login-page">
	<div class="limiter">
		<div class="container-login100 page-background">
			<div class="wrap-login100 loginBgImg">
				<form class="login100-form validate-form" asp-action="Forgetpassword"> 
					<span class=" cus-login-logo">
						<img alt="logo" src="~/b-assets/images/Logo Master Horiz Clear White.png" />
					</span>
					<span class="login100-form-title p-b-34 p-t-27">
						Reset Password
					</span>
					<div class="text-danger text-center" id="error-login-container">
						@msgErr
					</div>
					<div class="text-success text-center" id="success-login-container">
						@msgSus
					</div>
					<div class="text-center">
						<p class="txt1 p-b-20">
							Enter your registered email address.
						</p>
					</div>
					<div class="wrap-input100 validate-input" data-validate="Enter email">
						<input class="input100" type="text" name="email" placeholder="Email">
						<i class="material-icons focus-input1001">email</i>
					</div>
					<div class="container-login100-form-btn login-btn-outter-sec">
						<button class=" log-btn">
							Reset My Password
						</button>
					</div>
					<div class="text-center p-4">
						<a class="txt1 login-link" href="Login">
							<i class="fa fa-arrow-left mr-1" aria-hidden="true"></i>  Back to Login
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	<!-- Plugins Js -->

	<script src="~/b-assets/js/app.min.js"></script>

	<!-- Extra page Js -->
	<script src="~/b-assets/js/pages/examples/pages.js"></script>
</body>
<script>
	window.onload = function () {
		setTimeout(
			function () {
				document.getElementById('error-login-container').style.display = 'none';
			}, 3000);
	}
</script>
</html>
